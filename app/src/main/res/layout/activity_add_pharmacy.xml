<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pharmacy.AddPharmacyActivity"
    android:orientation="vertical"
    android:layout_margin="32dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Pharmacy"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="22dp"
        android:textColor="@color/colorBlack"
        />

    <EditText
        android:id="@+id/pharmacy_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorBlack"
        android:hint="Pharmacy Name"
        android:drawableStart="@drawable/ic_baseline_store_24"/>

    <EditText
        android:id="@+id/pharmacy_location_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorBlack"
        android:drawableStart="@drawable/ic_baseline_add_location_24"
        android:hint="Location"/>

    <Button
        android:id="@+id/pharmacy_submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlack"
        android:layout_marginTop="16dp"
        android:text="Submit"
        />

</LinearLayout>